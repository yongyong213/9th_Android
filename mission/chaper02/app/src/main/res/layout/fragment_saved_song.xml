<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SaveSongFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saved_song_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <ImageView
            android:id="@+id/saved_song_btn_playlist_select_off_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_playlist_select_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/saved_song_playlist_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="전체 선택"
            android:textSize="15sp"
            android:textColor="@color/gray_color"
            app:layout_constraintStart_toEndOf="@id/saved_song_btn_playlist_select_off_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/saved_song_btn_arrow_right_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_browse_arrow_right"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/saved_song_playlist_select_tv"/>

        <TextView
            android:id="@+id/saved_song_playlist_listen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="전체 듣기"
            android:textSize="15sp"
            android:textColor="@color/gray_color"
            app:layout_constraintStart_toEndOf="@id/saved_song_btn_arrow_right_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/saved_song_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="편집"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_locker_song"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saved_song_top_bar_layout"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_locker_song"/>


</androidx.constraintlayout.widget.ConstraintLayout>