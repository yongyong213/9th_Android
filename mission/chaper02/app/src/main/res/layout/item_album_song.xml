<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_item_album_song_num"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:text="01"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_album_song_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Be My Love With"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/tv_item_album_song_num"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/tv_item_album_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Owen Ovadoz"
        app:layout_constraintStart_toEndOf="@id/tv_item_album_song_num"
        app:layout_constraintTop_toBottomOf="@id/tv_item_album_song_title"
        android:textColor="@color/gray_color"/>

    <ImageView
        android:id="@+id/iv_btn_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_btn_play"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_play"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>