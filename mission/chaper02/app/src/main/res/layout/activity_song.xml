<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/song_btn_setting_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/btn_player_setting"/>

        <ImageView
            android:id="@+id/song_btn_eq_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/song_btn_setting_iv"
            android:layout_marginStart="8dp"
            android:src="@drawable/btn_player_eq_off"/>

        <ImageView
            android:id="@+id/song_btn_down_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/nugu_btn_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/song_btn_player_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/song_topbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_player_more"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/song_topbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/song_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="노래 제목"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/song_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/song_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:text="가수 이름"
            android:textSize="16sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:id="@+id/song_album_img_iv"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_info_layout"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_album_exp2"/>

    <ImageView
        android:id="@+id/iv_like_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_my_like_on"
        app:layout_constraintTop_toTopOf="@id/song_album_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_album_img_iv"
        app:layout_constraintStart_toStartOf="@id/song_album_img_iv"
        app:layout_constraintEnd_toEndOf="@id/song_album_img_iv"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/song_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/song_album_img_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray_color"
        android:textSize="16sp"
        android:text="내리는 꽃가루에\n눈이 따끔해 아야"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_reaction"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics"
        app:layout_constraintBottom_toTopOf="@id/song_progressbar_layout">
        <ImageView
            android:id="@+id/song_btn_like_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_my_like_off"/>
        <ImageView
            android:id="@+id/iv_song_btn_like_on"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_my_like_on"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/song_btn_unlike_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/btn_player_unlike_off"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_playerbar_layout"
        android:layout_marginBottom="15dp">
        
        <SeekBar
            android:id="@+id/sb_song_progress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:progressTint="@color/blue"
            android:max="100000"
            android:background="@null"/>


        <TextView
            android:id="@+id/song_current_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="16sp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/song_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00"
            android:textSize="16sp"
            android:textColor="@color/text_sub"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_playerbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@id/song_etcbar_layout">

        <LinearLayout
            android:id="@+id/song_player_layout"
            android:layout_width="170dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/song_btn_previous_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/btn_miniplayer_previous"/>
            <ImageView
                android:id="@+id/song_btn_play_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_miniplayer_play"/>
            <ImageView
                android:id="@+id/song_btn_pause_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_miniplay_pause"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/song_btn_next_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/song_btn_play_iv"
                android:layout_marginStart="10dp"
                android:src="@drawable/btn_miniplayer_next"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/song_btn_random_inactive_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/nugu_btn_random_inactive"
            app:tint="@color/button_tint_color"/>

        <ImageView
            android:id="@+id/song_btn_repeat_inactive_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/nugu_btn_repeat_inactive"
            app:tint="@color/button_tint_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_etcbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/song_actionbar_instagram_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/btn_actionbar_instagram"/>

        <ImageView
            android:id="@+id/song_actionbar_related_iv"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/btn_player_related"/>


        <ImageView
            android:id="@+id/song_actionbar_go_list_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_miniplayer_go_list"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>