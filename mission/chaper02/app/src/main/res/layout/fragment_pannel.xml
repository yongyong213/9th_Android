<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pannel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/pannel_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_first_album_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pannel_btn_nugu_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_mike"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/pannel_btn_ticket_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pannel_album_singer_tv"/>

    <ImageView
        android:id="@+id/pannel_btn_ticket_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_ticket"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/pannel_btn_setting_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/pannel_btn_setting_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_setting"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pannel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매혹적인 음색의 여성 보컬 \n팝"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pannel_btn_ticket_iv"/>

    <ImageView
        android:id="@+id/pannel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_panel_play_large"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pannel_btn_nugu_iv"/>

    <ImageView
        android:id="@+id/pannel_album_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pannel_background_iv"
        />

    <TextView
        android:id="@+id/pannel_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 36곡 2025.09.22"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/pannel_album_img_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/pannel_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In My Bed"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/pannel_album_img_iv"
        app:layout_constraintStart_toEndOf="@id/pannel_album_img_iv"
        app:layout_constraintBottom_toTopOf="@id/pannel_album_singer_tv"
        />

    <TextView
        android:id="@+id/pannel_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bear"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/pannel_album_title_tv"
        app:layout_constraintStart_toEndOf="@id/pannel_album_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/pannel_album_img_iv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>