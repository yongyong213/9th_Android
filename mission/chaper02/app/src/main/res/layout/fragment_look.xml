<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LookFragment">

    <TextView
        android:id="@+id/tv_look_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="둘러보기"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/look_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_look_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_chart"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="차트"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_video"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="영상"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_genre"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="장르"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_situation"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="상황"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mood"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="분위기"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_audio"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:chipBackgroundColor="@color/selector_chip_background"
            android:textColor="@color/selector_chip_text"
            android:text="오디오"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tv_look_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차트"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/look_chip_group"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>